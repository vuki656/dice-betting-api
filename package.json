{
    "name": "dice-betting-api",
    "version": "1.0.0",
    "repository": "git@github.com:vuki656/dice-betting-api.git",
    "author": "Domagoj Vukovic <off.vukovic@gmail.com>",
    "scripts": {
        "build": "tsc",
        "database:migrate:down": "sequelize-cli db:migrate:undo:all",
        "database:migrate:up": "sequelize-cli db:migrate",
        "database:seed": "sequelize-cli db:seed:all",
        "database:seed:wipe": "sequelize-cli db:seed:undo:all",
        "database:setup": "docker compose up -d",
        "dev": "nodemon",
        "generate:database:migration": "sequelize-cli migration:generate --name",
        "generate:database:seed": "sequelize-cli seed:generate --name",
        "generate:types:graphql:dev": "graphql-codegen --config='./codegen.ts'",
        "generate:types:graphql:test": "graphql-codegen --config='./codegen.tests.ts'",
        "lint": "yarn lint:prettier && yarn lint:cspell && yarn lint:eslint",
        "lint:cspell": "cspell --no-progress --unique '**'",
        "lint:eslint": "eslint ./src/**/*.{ts,js} --quiet --cache",
        "lint:fix": "yarn lint:prettier --write && yarn lint:eslint --fix && yarn lint:cspell",
        "lint:prettier": "prettier --check \"**/*.{yaml,yml,json,md,graphql}\"",
        "test": "jest --runInBand"
    },
    "dependencies": {
        "@apollo/server": "^4.10.0",
        "@graphql-tools/load-files": "^7.0.0",
        "@graphql-tools/merge": "^9.0.3",
        "dotenv": "^16.4.5",
        "envalid": "^8.0.0",
        "graphql": "^16.8.1",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "pino": "^8.19.0",
        "sequelize": "^6.37.1",
        "sequelize-cli": "^6.6.2",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.4.1",
        "@graphql-codegen/cli": "^5.0.2",
        "@graphql-codegen/graphql-modules-preset": "^4.0.6",
        "@graphql-codegen/typescript-resolvers": "^4.0.6",
        "@rimac-technology/style-guide": "^9.2.1",
        "@types/eslint": "^8.56.3",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.20",
        "@types/pg": "^8.11.1",
        "cspell": "^8.4.1",
        "eslint": "^8.57.0",
        "graphql-tag": "^2.12.6",
        "jest": "^29.7.0",
        "nodemon": "^3.1.0",
        "pino-pretty": "^10.3.1",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "packageManager": "yarn@4.1.0"
}
